<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EDVORA" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/taskbar_color</item>
    </style>

    <style name="logo" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/sfprobold</item>
    </style>

    <style name="textPrimary" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/intermedium</item>
    </style>


    <style name="textSecondary" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="fontFamily">@font/intermedium</item>
    </style>

    <style name="textLightSecondary" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="fontFamily">@font/interlight</item>
    </style>

    <style name="textHeading" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/interbold</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/intermedium</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>